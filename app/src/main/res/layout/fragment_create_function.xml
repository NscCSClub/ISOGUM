<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nsccsclub.isogum.CreateFunctionFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:id="@+id/create_function_function_field"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/function_symbol"
                    android:id="@+id/textView"
                    android:padding="@dimen/field_margin" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText"
                    android:padding="@dimen/field_margin"
                    android:nestedScrollingEnabled="false"
                    android:singleLine="true"
                    android:inputType="none" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight=".1"
                android:layout_below="@id/create_function_function_field"
                android:id="@+id/create_function_keys"
                android:paddingTop="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight=".1"
                    android:paddingTop="5dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight=".66">

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="aSin"
                            android:id="@+id/aSin"
                            android:layout_weight=".2"
                            android:onClick="onTextButton" />

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="ACos"
                            android:id="@+id/aCos"
                            android:layout_weight=".2"
                            android:onClick="onTextButton"/>

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="atan"
                            android:id="@+id/aTan"
                            android:layout_weight=".2"
                            android:onClick="onTextButton"
                            android:padding="1dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight=".33"
                        android:paddingLeft="0dp">

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="ln"
                            android:id="@+id/ln"
                            android:layout_weight=".2"
                            android:onClick="onTextButton"/>

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="log"
                            android:id="@+id/log"
                            android:layout_weight=".2"
                            android:onClick="onTextButton"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight=".1"
                    android:paddingBottom="5dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight=".66"
                        android:layout_marginRight="0dp">

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="Sin"
                            android:id="@+id/sin"
                            android:layout_weight=".2"
                            android:onClick="onTextButton"/>

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="Cos"
                            android:id="@+id/cos"
                            android:layout_weight=".2"
                            android:onClick="onTextButton"/>

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="Tan"
                            android:id="@+id/tan"
                            android:layout_weight=".2"
                            android:onClick="onTextButton"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight=".33"
                        android:layout_marginLeft="0dp">

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="("
                            android:id="@+id/leftParen"
                            android:layout_weight=".2"
                            android:onClick="onTextButton"/>

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text=")"
                            android:id="@+id/rightParen"
                            android:layout_weight=".2"
                            android:onClick="onTextButton"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".1">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight=".66"
                        android:paddingRight="1dp">

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="7"
                            android:id="@+id/num7"
                            android:layout_weight=".33"
                            android:onClick="onTextButton"/>

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="8"
                            android:id="@+id/num8"
                            android:layout_weight=".33"
                            android:onClick="onTextButton"/>

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="9"
                            android:id="@+id/num9"
                            android:layout_weight=".33"
                            android:onClick="onTextButton"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight=".33"
                        android:paddingLeft="1dp">

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="%"
                            android:id="@+id/div"
                            android:layout_weight=".5"
                            android:onClick="onTextButton"/>

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="^"
                            android:id="@+id/pow"
                            android:layout_weight=".5"
                            android:onClick="onTextButton"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".1">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight=".66"
                        android:paddingRight="1dp">

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="4"
                            android:id="@+id/num4"
                            android:layout_weight=".33"
                            android:onClick="onTextButton"/>

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="5"
                            android:id="@+id/num5"
                            android:layout_weight=".33"
                            android:onClick="onTextButton"/>

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="6"
                            android:id="@+id/num6"
                            android:layout_weight=".33"
                            android:onClick="onTextButton"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight=".33"
                        android:paddingLeft="1dp">

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="x"
                            android:id="@+id/times"
                            android:layout_weight=".5"
                            android:onClick="onTextButton"/>

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="e"
                            android:id="@+id/e"
                            android:layout_weight=".5"
                            android:onClick="onTextButton"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".1">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight=".66"
                        android:paddingRight="1dp">

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="1"
                            android:id="@+id/num1"
                            android:layout_weight=".33"
                            android:onClick="onTextButton"/>

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="2"
                            android:id="@+id/num2"
                            android:layout_weight=".33"
                            android:onClick="onTextButton"/>

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="3"
                            android:id="@+id/num3"
                            android:layout_weight=".33"
                            android:onClick="onTextButton"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight=".33"
                        android:paddingLeft="1dp">

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="-"
                            android:id="@+id/minus"
                            android:layout_weight=".5"
                            android:onClick="onTextButton"/>

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="pi"
                            android:id="@+id/pi"
                            android:layout_weight=".5"
                            android:onClick="onTextButton"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".1">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight=".66"
                        android:paddingRight="1dp">

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="0"
                            android:id="@+id/num0"
                            android:layout_weight=".33"
                            android:onClick="onTextButton"/>

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="."
                            android:id="@+id/point"
                            android:layout_weight=".33"
                            android:onClick="onTextButton"/>

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="-"
                            android:id="@+id/neg"
                            android:layout_weight=".33"
                            android:onClick="onTextButton"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight=".33"
                        android:paddingLeft="1dp">

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="+"
                            android:id="@+id/plus"
                            android:layout_weight=".5"
                            android:onClick="onTextButton"/>

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="Delete"
                            android:id="@+id/del"
                            android:layout_weight=".5"
                            android:onClick="onTextButton"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="Left"
                        android:id="@+id/left"
                        android:layout_weight=".33"
                        android:onClick="onTextButton"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="variable"
                        android:id="@+id/var"
                        android:layout_weight=".66"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:onClick="onVariableButton"
                        android:nestedScrollingEnabled="true" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="Right"
                        android:id="@+id/right"
                        android:layout_weight=".33"
                        android:onClick="onTextButton"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:paddingTop="1dp">

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="cancel"
                        android:id="@+id/cancel"
                        android:layout_weight=".5"
                        android:layout_marginRight="1dp"
                        android:onClick="onActionButton"/>

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="save"
                        android:id="@+id/save"
                        android:layout_weight=".5"
                        android:layout_marginLeft="1dp"
                        android:onClick="onActionButton"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
